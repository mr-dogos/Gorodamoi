{% extends "template/main/template.twig" %}
{% block content %}
<div class="content-page">
	<section id="home" class="bg-section">
		<article class="bg-section_container" style="background-image: url({{ home.background }});">
			<div class="container-lg">
				<h1 class="home-title">{{ home.title }}</h1>
				<div class="row">
					<div class="d-flex col-lg-6">
						<div class="message_home align-self-center">
							{{ home.content }}
							<button type="button" class="calck btn btn-info btn-lg" data-toggle="modal" data-target="{{ button.calc.href }}"><i class="fas fa-calculator"></i> {{ button.calc.title }}</button>
						</div>
					</div>
					<div class="d-flex col-lg-6">
						<div class="image_home d-none d-lg-block align-self-end">
							<img src="{{ home.ledy }}" alt="{{ home.title }}" class="img-fluid">
						</div>
					</div>
				</div>
			</div>
		</article>
		<div class="fo-section" style="background-image: url({{ home.wave }});"></div>
	</section>
	<section id="services" class="line-section">
		<article>
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-hand-sparkles"></i> {{ service.title }}</h3>
				<div class="services_card row">
					{% for card in service.cards %}
					<div class="col-lg-4 col-md-6">
						<div class="card">
  							<div class="card-body">
								<div class="card-body_icon"><img src="{{ card.icon }}" alt="{{ card.title }}" class="img-fluid"></div>
								<div class="card-body_content">
    								<h5>{{ card.title }}</h5>
									<p>{{ card.content }}</p>
								</div>
								<button type="button" class="serve btn btn-primary btn-block btn-lg" data-card="{{ card.title }}"><i class="fas fa-phone-alt"></i> {{ button.serve.title }}</button>
  							</div>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
		</article>
	</section>
	<section id="info" class="line-section">
		<article>
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-info-circle"></i> {{ info.title }}</h3>
				<div class="info_content">
					<img src="{{ info.image }}" alt="{{ info.title }}" class="float-left mr-3 mb-1">
					{{ info.content }}
				</div>
			</div>
		</article>
	</section>
	<section id="advantages" class="line-section">
		<article>
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-hand-spock"></i> {{ advant.title }}</h3>
				<div class="swiper-container">
					<div class="swiper-wrapper">
						{% for card in advant.cards %}
						<div class="swiper-slide">
							<div class="card" style="background-image: url({{ advant.background }});">
								<div class="card-body">
									<div class="card-body_content">
										<h5>{{ card.title }}</h5>
										<p>{{ card.content }}</p>
									</div>
								</div>
							</div>
						</div>
						{% endfor %}		
					</div>
					<div class="swiper-button-prev"></div>
    				<div class="swiper-button-next"></div>
				</div>
			</div>
		</article>
	</section>
	<section id="award" class="bg-section">
		<article class="bg-section_container" style="background-image: url({{ award.background }});">
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-thumbs-up"></i> {{ award.title }}</h3>
				<div class="award_card row">
					{% for image in award.images %}
					<div class="col-lg-4">
						<div class="card" data-toggle="tooltip" data-placement="top" title="{{ image.alt }}">
							<div class="card-body">
								<a href="{{ image.full }}" data-lightbox="award"><img src="{{ image.medium }}" class="card-img" alt="{{ image.alt }}"></a>
							</div>
						</div>
					</div>
					{% endfor %}					
				</div>
			</div>
		</article>
	</section>
	<section id="galworks" class="line-section">
		<article>
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-images"></i> {{ galwork.title }}</h3>
				<div class="swiper-container">
					<div class="swiper-wrapper">
						{% for image in galwork.images %}
						<div class="swiper-slide">
							<a href="{{ image.full }}" data-lightbox="works"><div class="card"><div class="card-body"><img src="{{ image.medium }}" class="card-img" alt="{{ galwork.title }}"></div></div></a>
						</div>
						{% endfor %}
					</div>
  					<div class="swiper-button-prev"></div>
  					<div class="swiper-button-next"></div>
					<div class="swiper-pagination"></div>
				</div>
			</div>
		</article>
	</section>
	<section id="trusted" class="line-section">
		<article class="bg-section_container" style="background-image: url({{ award.background }});">
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-hand-peace"></i> {{ trusted.title }}</h3>
				<div class="swiper-container">
					<div class="swiper-wrapper">
						{% for image in trusted.images %}
						<div class="swiper-slide">
							<div class="card">
								<div class="card-body">
									<img src="{{ image.full }}" class="card-img" alt="{{ trusted.title }}">
								</div>
							</div>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</article>
	</section>
	<section id="map">
		<article class="section-map">
			<div class="container-lg">
				<h3 class="title"><i class="fas fa-map-marked-alt"></i> {{ map.title }}</h3>
				<div class="row">
					<div class="col-lg-6">
						<div class="card">
							<div class="card-body">
								<img src="{{ map.image }}" alt="{{ map.title }}" class="d-none d-lg-block">
								{{ map.content }}
								<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="{{ button.phone.href }}"><i class="fas fa-phone-alt"></i> {{ button.phone.title }}</button>
							</div>
						</div>					
					</div>
					<div class="col-lg-6">
						<div class="card">
							<div class="card-body map">
								<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Aa3f1bc243478684b9191ed3de7a5176aa9250868233948028e0ab7b8396c36cd&amp;width=100%25&amp;height=345&amp;lang=ru_RU&amp;scroll=true"></script>
							</div>
						</div>
					</div>
				</div>
			</div>
		</article>
	</section>
</div>
{% endblock %}