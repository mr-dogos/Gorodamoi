<header class="bg-white shadow-sm">
	<div class="container-lg">
		<nav id="navbar-menu" class="navbar navbar-expand-lg navbar-light">
			<a class="navbar-brand" href="{{ logo.href }}"><img src="{{ logo.dark }}" height="42" class="d-inline-block align-top" alt="{{ logo.alt }}"></a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navMobile" aria-controls="navMobile" aria-expanded="false" aria-label="Mobile">
    			<span class="navbar-toggler-icon"></span>
  			</button>
			<div class="collapse navbar-collapse" id="navMobile">
    			<ul class="navbar-nav mr-auto d-lg-none">
				{% for key,item in menu.items %}
					{% if item.link == '#phone-model' %}
						<li class="nav-item"><a class="nav-link" href="#" data-toggle="modal" data-target="{{ item.link }}"><i class="fas {{ menu_icons[key] }}"></i> {{ item }}</a></li>
					{% else %}
						<li class="nav-item"><a class="nav-link href" href="{{ item.link }}"><i class="fas {{ menu_icons[key] }}"></i> {{ item }}</a></li>
					{% endif %}
				{% endfor %}
    			</ul>
			</div>
			<ul class="navbar-nav d-none d-lg-inline-flex mr-auto">
				{% for item in menu.items %}
					{% if item.link == '#phone-model' %}
						<li class="nav-item"><button type="button" class="phone btn btn-primary ml-3 mt-1" data-toggle="modal" data-target="{{ item.link }}"><i class="fas fa-phone-alt"></i> {{ button.phone.title }}</button></li>
					{% else %}
						<li class="nav-item"><a class="nav-link href" href="{{ item.link }}">{{ item }}</a></li>
					{% endif %}
				{% endfor %}
			</ul>
		</nav>
	</div>
</header>